@model CartListViewModel

<div class="container">
    <div class="row pt-5">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-info" role="alert">@TempData["message"]</div>
        }
        @if (Model.Cart.CartLines.Count > 0 && Model.Cart.CartLines.Count != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Product Image</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Unit Price</th>
                        <th scope="col">Quantity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Cart.CartLines)
                    {
                        <tr>
                            <td>
                                <img src="@item.Product.ImageUrl" alt="Girl in a jacket" width="100" height="00">
                            </td>
                            <td>
                                @item.Product.Name
                            </td>
                            <td>
                                @item.Product.Price
                            </td>
                            <td>
                                @item.Product.Quantity
                            </td>
                            <td><a class="btn btn-xs btn-danger" asp-controller="Cart" asp-action="Remove" asp-route-productId="@item.Product.ProductId">Sil</a></td>
                        </tr>
                    }
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><h3>Total</h3></td>
                        <td class="text-right">
                            <h3>@Model.Cart.Total</h3>
                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            <a asp-controller="Product" asp-action="Index" class="btn btn-xs btn-light">
                                <span>Alışverişe Devam Et</span>
                            </a>
                        </td>

                        <td>
                            <a asp-controller="Payment" asp-action="CheckOut" class="btn btn-xs btn-success">
                                <span>Ödemeye Git</span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <div class="col-lg-12">
                <div class="alert alert-warning  text-center " role="alert">
                    Ürün Bulunamadı!
                </div>
            </div>
        }
    </div>
</div>